<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:gravity="center_vertical|center_horizontal"
	android:background="@color/mymaincolor" >
	
    <Button android:id="@+id/sideBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		
        android:text="button1"/>
    <Button android:id="@+id/bBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sideBtn"
        android:text="button2"/>
    <Button android:id="@+id/cBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/bBtn"
        android:text="button3"/>
    <Button android:id="@+id/dBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cBtn"
        android:text="button4"/>

</RelativeLayout>
